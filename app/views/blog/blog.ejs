<!DOCTYPE html>
<html>
    <head>
        <style>
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td,
            th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }
        </style>
    </head>
    <body>
        <h2>HTML Table</h2>

        <table>
            <tr>
                <th>title</th>
                <th>description</th>
                <th>category</th>
                <th>thumbnail</th>
                <th>author</th>
            </tr>
            <%data.forEach((items) => {%>
            <tr>
                <td><%=items.title%></td>
                <td><%=items.description%></td>
                <td><%=items.category?.name%></td>
                <td><%=items.thumbnail%></td>
                <td><%=items.author?.name%></td>
            </tr>
            <%})%>
        </table>
        <a href="/logout">logout</a>
    </body>
</html>
